    "version": "0.2.0",
    "configurations": [
        {
            "name": "Host with python and debug (Chrome)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8000",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "Host",
            "postDebugTask": "Terminate All Tasks",
            "presentation": {
                "group": "Chrome",
            }
        },
        {
            "name": "Host with Live Server extension and debug (Chrome)",
            "port": 9222,
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5500",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "StartServer",
            "postDebugTask": "StopServer",
            "presentation": {
                "group": "Chrome",
            }
        },
        {
            "name": "Host with python and debug (Edge)",
            "type": "msedge",
            "request": "launch",
            "url": "http://localhost:8000",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "Host",
            "postDebugTask": "Terminate All Tasks",
            "presentation": {
                "group": "Edge",
            }
        },
        {
            "name": "Host with Live Server extension and debug (Edge)",
            "port": 9222,
            "type": "msedge",
            "request": "launch",
            "url": "http://localhost:5500",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "StartServer",
            "postDebugTask": "StopServer",
            "presentation": {
                "group": "Edge",
            }
        }
    ]
}
